# Common environment variables
ENVIRONMENT=development
DEBUG=true
API_BASE_URL=http://localhost:8000

# Application secrets
APP_NAME=Service Template Backend
APP_ENV=development
APP_SECRET_KEY=please-change-me

# Optional modules that should be started (comma separated)
ENABLED_MODULES=backend,frontend,tg_bot

# Database configuration used by the backend and Alembic
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=service_template
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_REQUIRE_SSL=false

# Optional overrides for advanced scenarios
# DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/service_template
# SQLALCHEMY_SYNC_DRIVER=postgresql+psycopg
# SQLALCHEMY_ASYNC_DRIVER=postgresql+asyncpg
REDIS_URL=redis://redis:6379
