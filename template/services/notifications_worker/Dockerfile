ARG INSTALL_DEV_DEPS="false"

FROM python:3.11-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

WORKDIR /app

COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

FROM base AS deps
ARG INSTALL_DEV_DEPS
COPY shared/pyproject.toml ./shared/pyproject.toml
RUN mkdir -p ./shared/shared && touch ./shared/shared/__init__.py
COPY services/notifications_worker/pyproject.toml services/notifications_worker/uv.lock ./services/notifications_worker/
RUN cd services/notifications_worker \
    && if [ "$INSTALL_DEV_DEPS" = "true" ]; then \
    uv sync --frozen --no-install-project; \
    else \
    uv sync --frozen --no-install-project --no-dev; \
    fi
COPY shared/shared ./shared/shared

FROM base AS runtime
COPY --from=deps /app/services/notifications_worker/.venv /app/services/notifications_worker/.venv
ENV PATH="/app/services/notifications_worker/.venv/bin:${PATH}"
COPY services/notifications_worker ./services/notifications_worker
COPY services/notifications_worker/README.md ./README.md
COPY shared ./shared

RUN chown -R 1000:1000 /app
USER 1000

CMD ["python", "services/notifications_worker/src/main.py"]
