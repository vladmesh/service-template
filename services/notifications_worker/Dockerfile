##############################################################################
# THIS FILE IS GENERATED BY THE FRAMEWORK. DO NOT EDIT MANUALLY.
# CHANGES WILL BE OVERWRITTEN.
##############################################################################

ARG INSTALL_DEV_DEPS="false"

FROM python:3.11-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=off \
    PYTHONPATH=/app

WORKDIR /app

RUN pip install --no-cache-dir --upgrade pip

FROM base AS deps
ARG INSTALL_DEV_DEPS
RUN pip install --no-cache-dir poetry
# Copy only shared metadata and create minimal package structure for editable install
COPY shared/pyproject.toml ./shared/pyproject.toml
# Create minimal package structure so poetry can install in editable mode
RUN mkdir -p ./shared/shared && touch ./shared/shared/__init__.py
COPY services/notifications_worker/pyproject.toml services/notifications_worker/poetry.lock ./services/notifications_worker/
RUN cd services/notifications_worker \
    && poetry config virtualenvs.create false \
    && poetry lock \
    && if [ "$INSTALL_DEV_DEPS" = "true" ]; then \
    poetry install --with dev --no-root; \
    else \
    poetry install --without dev --no-root; \
    fi
# Copy actual shared code after dependency installation (changes won't invalidate poetry install cache)
COPY shared/shared ./shared/shared

FROM base AS runtime
COPY --from=deps /usr/local /usr/local
COPY services/notifications_worker ./services/notifications_worker
COPY services/notifications_worker/README.md ./README.md
COPY shared ./shared



CMD ["python", "services/notifications_worker/src/main.py"]
