# test-sync Environment Configuration
# Copy this file to .env and adjust values as needed

# Common settings
ENVIRONMENT=development
DEBUG=true

# Application
APP_NAME=test-sync
APP_ENV=development
APP_SECRET_KEY=please-change-me-in-production


# Database (PostgreSQL)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=test_sync
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_REQUIRE_SSL=false



# Redis (for async messaging)
REDIS_URL=redis://redis:6379



# Backend API URL (for service-to-service communication)
API_BASE_URL=http://backend:8000



# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

